{{> NavBar loggedIn=true active="categories" }}

<div class="container">
    <div class="columns">
        <div class="column">
            <div class="is-sticky">
                <h1 class="title"><small><i class="fas fa-plus mr-2"></i></small>New category</h1>
                {{> NewCategory}}
            </div>
        </div>
        <div class="column">
            <h1 class="title"><small><i class="fas fa-star mr-2"></i></small>Categories</h1>
            {{# unless categories.length}}
                <div class="notification is-warning">
                    You have no categories yet.
                </div>
            {{/unless}}
            {{# each categories}}
                {{> CategoryView}}
            {{/each}}
        </div>
    </div>
</div>