{{> NavBar loggedIn=true active="user" }}

<div class="container">
    {{#if passChanged}}
        {{> Notification message="Password changed." type="success" icon="check"}}
    {{else}}
        {{# ne passChanged null}}
            {{> Notification message=errorMessage type="danger" icon="exclamation-triangle"}}
        {{/ne}}
    {{/if}}

    <div class="box">
        <h1 class="title">Change password</h1>
        {{> PasswordForm }}
    </div>
</div>